
{
  "manifest_version": 3,
  "name": "MATRYOSHKA TOOLS",
  "description": "Инструменты для анализа и оптимизации сайта: метатеги, анализ текста, анализ изображений, анализ ссылок, анализ микроразметки, полезные инструменты, сервисы и другое!",
  "version": "1.0",
  "permissions": ["activeTab", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>","http://*/*",
    "https://*/*", "https://gogetlinks.net/*","https://checktrust.ru/*"],
  "action": {
  "default_popup": "popup.html",
  "default_icon": {
 "16": "icon16.png",
  "32": "icon32.png",
  "48": "icon48.png",
  "128": "icon128.png"
  },
  "default_title": "MATRYOSHKA TOOLS"
},
  "content_scripts": [
    {
      "matches": ["<all_urls>","https://gogetlinks.net/*"],
      "js": ["content.js"]
    }
  ]
}
